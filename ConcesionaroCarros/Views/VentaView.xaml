<Window x:Class="ConcesionaroCarros.Views.VentaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración de Venta" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                        Stretch="UniformToFill" Opacity="0.2"/>
        </Grid.Background>

        <Border Background="#F9FFFFFF" CornerRadius="15" Margin="20" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="DETALLES DE LA OPERACIÓN" FontSize="22" FontWeight="Black" Foreground="#1A1A1A"/>
                        <TextBlock Text="Resumen de compra y configuración técnica" FontSize="12" Foreground="#777"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="FACTURA BASE PROMEDIA" FontWeight="Bold" Foreground="#D4AF37" HorizontalAlignment="Right"/>
                        <TextBlock Text="FECHA: 2024-05-22" FontSize="11" Foreground="#555"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Background="White" BorderBrush="#EEE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/> <ColumnDefinition Width="*"/>   </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" CornerRadius="8" Height="180" BorderBrush="#DDD" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="https://images.unsplash.com/photo-1603584173870-7f394da87271?q=80&amp;w=500" 
                                            Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="DETALLES DEL VEHÍCULO" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333"/>
                            
                            <UniformGrid Columns="2">
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Marca:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="Audi" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Modelo:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="RS5 Coupé" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Año:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="2024" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Motor:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="2.9 TFSI V6 Biturbo" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Transmisión:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="Tiptronic 8 vel." FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Color:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="Negro Mito Metalizado" FontWeight="SemiBold"/>
                                </StackPanel>
                            </UniformGrid>

                            <Border Background="#F1F1F1" Margin="0,15,0,0" Padding="10" CornerRadius="5">
                                <DockPanel>
                                    <TextBlock Text="PRECIO BASE VEHÍCULO:" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Text="$765.000.000 COP" HorizontalAlignment="Right" FontSize="18" FontWeight="Black" Foreground="#007ACC"/>
                                </DockPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" BorderBrush="#EEE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="EQUIPAMIENTO Y EXTRAS" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <CheckBox Content="Blindaje Nivel 3 (+$25.000.000)" Margin="0,5"/>
                            <CheckBox Content="Sistema Sonido Bang &amp; Olufsen (+$5.500.000)" Margin="0,5"/>
                            <CheckBox Content="GPS Satelital Premium (+$1.200.000)" Margin="0,5"/>
                            <CheckBox Content="Rines de 20' Forjados (+$4.800.000)" Margin="0,5"/>
                            <Separator Margin="0,10"/>
                            <TextBlock Text="Resumen de extras:" FontSize="11" Foreground="#888"/>
                            <TextBlock Text="$0" FontSize="16" FontWeight="Bold" Foreground="#27AE60" x:Name="txtTotalExtras"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" BorderBrush="#EEE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="FORMA DE PAGO" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <RadioButton Content="Pago de Contado" IsChecked="True" Margin="0,5"/>
                            <RadioButton Content="Crédito Bancario" Margin="0,5"/>
                            
                            <UniformGrid Columns="2" Margin="0,10,0,0">
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Banco" FontSize="11" Foreground="#888"/>
                                    <TextBox Height="28" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="5,0,0,0">
                                    <TextBlock Text="Cuotas" FontSize="11" Foreground="#888"/>
                                    <TextBox Height="28" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </UniformGrid>
                            
                            <Border Background="#1A1A1A" CornerRadius="5" Margin="0,20,0,0" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="TOTAL ESTIMADO A PAGAR" Foreground="White" FontSize="10" HorizontalAlignment="Center"/>
                                    <TextBlock Text="$765.000.000" Foreground="#D4AF37" FontSize="22" FontWeight="Black" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <Button Grid.Row="3" Content="PROCESAR VENTA Y EMITIR FACTURA" 
                        Height="55" Background="#1E1E1E" Foreground="White" 
                        FontWeight="Bold" FontSize="16" Margin="0,20,0,0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>