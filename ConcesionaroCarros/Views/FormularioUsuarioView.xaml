<Window x:Class="ConcesionaroCarros.Views.FormularioUsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Registro de Identidad"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ModernInput" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" 
                                BorderBrush="#E5E7EB" BorderThickness="1.5">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock Text="{TemplateBinding Tag}" Margin="15,0" VerticalAlignment="Center"
                                           Foreground="#9CA3AF" IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1A2A3A" CornerRadius="20,20,0,0" Padding="25,20">
                <TextBlock Text="CONFIGURAR PERFIL" FontWeight="Bold" Foreground="White" FontSize="18"/>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="25,15">
                <StackPanel>
                    <TextBlock Text="Nombres" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <TextBox Style="{StaticResource ModernInput}" Tag="Ingrese nombres..." Text="{Binding Nombres}"/>

                    <TextBlock Text="Apellidos" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <TextBox Style="{StaticResource ModernInput}" Tag="Ingrese apellidos..." Text="{Binding Apellidos}"/>

                    <TextBlock Text="Correo Electrónico" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <TextBox Style="{StaticResource ModernInput}" Tag="ejemplo@driveanddream.com" Text="{Binding Correo}"/>

                    <TextBlock Text="Teléfono" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <TextBox Style="{StaticResource ModernInput}" Tag="+57 300..." Text="{Binding Telefono}"/>

                    <TextBlock Text="Contraseña Temporal" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <PasswordBox x:Name="pwd" Height="42" Margin="0,5,0,15">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <TextBlock Text="Rol Asignado" FontSize="12" FontWeight="Bold" Foreground="#4B5563"/>
                    <ComboBox Height="42" Margin="0,5,0,10" ItemsSource="{Binding Roles}" SelectedItem="{Binding Rol}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="#F3F4F6" CornerRadius="0,0,20,20" Padding="20,15">
                <DockPanel>
                    <Button Content="Cancelar" Click="Cerrar_Click" Background="Transparent" 
                            BorderThickness="0" Foreground="#6B7280" FontWeight="SemiBold" Cursor="Hand"/>

                    <Button x:Name="Guardar"
                  
                            HorizontalAlignment="Right" 
                            Background="#F1B434" 
                            Foreground="White" FontWeight="Bold" Padding="25,10" BorderThickness="0"
                            Command="{Binding GuardarCommand}"
                            CommandParameter="{Binding ElementName=pwd, Path=Password}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>