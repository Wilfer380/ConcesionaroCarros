<UserControl x:Class="ConcesionaroCarros.Views.CarrosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                        Stretch="UniformToFill" 
                        Opacity="0.3"/>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Selección de Vehículo"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1E1E1E"/>

            <ListView Grid.Row="1" Margin="0 15 0 0" BorderThickness="0" Background="Transparent">
                <ListView.Items>

                    <ListViewItem HorizontalContentAlignment="Stretch">
                        <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,5" Background="#E6F9F9F9">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#333" Width="120" Height="70" CornerRadius="4">
                                    <TextBlock Text="FOTO AUTO" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15 0" VerticalAlignment="Center">
                                    <TextBlock Text="Audi RS5 Coupé" FontWeight="Bold" FontSize="16" Foreground="#111"/>
                                    <TextBlock Text="Año: 2024" Foreground="#555"/>
                                    <TextBlock Text="Color: Negro Mito" Foreground="#777" FontSize="11"/>
                                    <TextBlock Text="$350.000.000 COP" FontWeight="Bold" Foreground="#007ACC" Margin="0 5 0 0"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="Seleccionar" Height="35" Background="#222" Foreground="White" BorderThickness="0" VerticalAlignment="Center" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <ListViewItem HorizontalContentAlignment="Stretch">
                        <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,5" Background="#E6FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#555" Width="120" Height="70" CornerRadius="4">
                                    <TextBlock Text="FOTO AUTO" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15 0" VerticalAlignment="Center">
                                    <TextBlock Text="BMW M4 Competition" FontWeight="Bold" FontSize="16" Foreground="#111"/>
                                    <TextBlock Text="Año: 2023" Foreground="#555"/>
                                    <TextBlock Text="Color: Azul Portimao" Foreground="#777" FontSize="11"/>
                                    <TextBlock Text="$420.000.000 COP" FontWeight="Bold" Foreground="#007ACC" Margin="0 5 0 0"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="Seleccionar" Height="35" Background="#222" Foreground="White" BorderThickness="0" VerticalAlignment="Center" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </ListViewItem>

                </ListView.Items>
            </ListView>
        </Grid>
    </Grid>
</UserControl>