<UserControl x:Class="ConcesionaroCarros.Views.CarrosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ConcesionaroCarros.Converters">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ViewBtn" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F0F4F8"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style x:Key="EditBtn" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="DeleteBtn" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="SelectBtn" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop"
                        Stretch="UniformToFill" Opacity="0.12"/>
        </Grid.Background>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="False" 
                       Margin="0,0,0,25">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Vehículos Disponibles" 
                               FontSize="28" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Gestiona el catálogo completo de vehículos a disposición" 
                               FontSize="14" 
                               Foreground="#666"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <!-- CARRITO -->
                    <Button Width="60"
                            Height="45"
                            Margin="0,0,10,0"
                            Background="#9C9C9C"
                            Foreground="Black"
                            Command="{Binding DataContext.ShowVentaCommand,
                                              RelativeSource={RelativeSource AncestorType=Window}}">
                        <Grid>
                            <TextBlock Text="🛒"
                                       FontSize="37"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <Border Background="#E74C3C"
                                    CornerRadius="10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-6,-6,0">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.CarritoCount,
                                               RelativeSource={RelativeSource AncestorType=Window}}"
                             Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <TextBlock Text="{Binding DataContext.CarritoCount,
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Padding="5,1"/>
                            </Border>
                        </Grid>
                    </Button>

                    <Button DockPanel.Dock="Right" 
                        Content="+ Agregar Vehículo" 
                        Width="180" Height="45"
                        Style="{StaticResource SelectBtn}" 
                        Background="#D4AF37"
                        Command="{Binding AgregarCarroCommand}"/>
                </StackPanel>
            </DockPanel>
            

            <ListView x:Name="ListaCarros"
                      Grid.Row="1"
                      ItemsSource="{Binding Carros}"
                      BorderThickness="0"
                      Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="15"
                                Padding="15"
                                Margin="25,8" 
                                Width="520"
                                Height="130">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#F9F9F9" CornerRadius="10" ClipToBounds="True">
                                    <Image Source="{Binding ImagenPath}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Modelo}" FontWeight="Bold" FontSize="18"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Border Background="#E3F2FD" Padding="5,2" CornerRadius="4">
                                            <TextBlock Text="{Binding Año}" FontSize="11" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Color}" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding PrecioVenta, StringFormat={}{0:N0} COP}" FontWeight="Black" FontSize="16"/>
                                    <TextBlock Text="{Binding Estado}" FontSize="11" Foreground="#27AE60" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" 
                                            VerticalAlignment="Center">

                                    <StackPanel Orientation="Horizontal">

                                    <Button Content="Ver detalles" 
                                            Width="90" 
                                            Height="35" 
                                            Style="{StaticResource ViewBtn}"
                                            Command="{Binding DataContext.VerDetalleCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                    
                                    <Button Content="✏️" 
                                            Width="38" Height="35" 
                                            Margin="5,0" Style="{StaticResource EditBtn}"
                                            Command="{Binding DataContext.EditarCarroCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                    
                                    <Button Content="🗑️" 
                                            Width="38" 
                                            Height="35" 
                                            Style="{StaticResource DeleteBtn}"
                                            Command="{Binding DataContext.EliminarCarroCommand, 
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>

                                <Button Content="Seleccionar"
                                        Background="#2C3E50"
                                        Width="120"
                                        Height="30"
                                        Margin="0,8,0,0"
                                        Style="{StaticResource SelectBtn}"
                                        Command="{Binding DataContext.AgregarAlCarritoCommand,
                                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ContentControl Content="{Binding ModalView}" Panel.ZIndex="99"/>
        </Grid>
    </Grid>
</UserControl>