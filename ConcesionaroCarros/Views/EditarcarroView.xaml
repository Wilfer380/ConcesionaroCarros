<UserControl x:Class="ConcesionaroCarros.Views.EditarCarroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#66000000">
        <Border Width="560"
                MaxHeight="700" 
                Padding="26"
                CornerRadius="18"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <DockPanel Margin="0,0,0,18">
                        <TextBlock Text="Editar Vehículo"
                                   Foreground="Black"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <Button Content="✕" 
                                Command="{Binding CerrarCommand}"
                                Background="Transparent" 
                                BorderThickness="0" 
                                Foreground="Gray" 
                                FontSize="18"
                                HorizontalAlignment="Right"
                                Cursor="Hand"/>
                    </DockPanel>

                    <Border Height="120"
                            Background="#F8FAFC"
                            CornerRadius="12"
                            Margin="0,0,0,18"
                            ClipToBounds="True">
                        <Image Source="{Binding Carro.ImagenPath}"
                               Stretch="UniformToFill"/>
                    </Border>

                    <Grid Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="6">
                            <TextBlock Text="Marca" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Marca}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="6">
                            <TextBlock Text="Modelo" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Modelo}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="6">
                            <TextBlock Text="Año" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Año}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="6">
                            <TextBlock Text="Color" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Color}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="6">
                            <TextBlock Text="Costo (COP)" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Costo}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="6">
                            <TextBlock Text="Precio Venta (COP)" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.PrecioVenta}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="6">
                            <TextBlock Text="Placa" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.Placa}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="6">
                            <TextBlock Text="Estado Antigüedad" Foreground="Black" Margin="0,0,0,5" FontSize="14"/>
                            <TextBox Text="{Binding Carro.EstadoAntiguedad}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="42" Padding="10,8"
                                     Foreground="Black" Background="#F8FAFC" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="6,0,6,15"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Unidades disponibles"
                                   Foreground="Black"
                                   Margin="0,0,0,5"
                                   FontSize="14"/>
                        <TextBox Text="{Binding Carro.UnidadesDisponibles}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Width="180"
                                 Height="42"
                                 Padding="10,8"
                                 Foreground="Black"
                                 Background="#F8FAFC"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Center"/>
                    </StackPanel>

                    <Grid Margin="6,0,6,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Más detalles del vehículo"
                                       Foreground="Black"
                                       Margin="0,0,0,5"
                                       FontSize="14"/>


                            <ScrollViewer Height="80"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"> 
                                <TextBox Text="{Binding Carro.Descripcion}"
                                     IsReadOnly="{Binding EsSoloLectura}"
                                     Height="80"
                                     Padding="10,8"
                                     Foreground="Black"
                                     Background="#F8FAFC"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                            </ScrollViewer>
                        </StackPanel>

                      
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Estado de garantía"
                                       Foreground="Black"
                                       Margin="0,0,0,5"
                                       FontSize="14"/>

                            <ScrollViewer Height="80"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                               <TextBox Text="{Binding Carro.EstadoGarantia}"
                                         IsReadOnly="{Binding EsSoloLectura}"
                                         Padding="10,8"
                                         Foreground="Black"
                                         Background="#F8FAFC"
                                         BorderThickness="0"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>


                    <Button Content="📷 Cargar Nueva Imagen"
                            Command="{Binding CargarImagenCommand}"
                            Height="35" Margin="6,0,6,15"
                            Background="#3a3f4b" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="Cerrar"
                                Command="{Binding CerrarCommand}"
                                Height="45" Margin="6,0"
                                Background="#F8FAFC" Foreground="Black" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Grid.Column="1" 
                                Content="Guardar Cambios"
                                Command="{Binding GuardarCommand}"
                                Height="45" Margin="6,0"
                                Background="#F5B301" Foreground="Black" 
                                FontWeight="Bold" FontSize="15" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>