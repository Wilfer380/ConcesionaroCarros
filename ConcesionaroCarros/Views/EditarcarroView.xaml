<UserControl x:Class="ConcesionaroCarros.Views.EditarCarroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- OVERLAY MÁS CLARO -->
    <Grid Background="#66000000">

        <!-- MODAL -->
        <Border Width="560"
                Padding="26"
                CornerRadius="18"
                Background="#232832"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- TÍTULO -->
                <TextBlock Text="Editar Vehículo"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,18"/>

                <!-- IMAGEN -->
                <Border Height="120"
                        Background="#1A1E25"
                        CornerRadius="12"
                        Margin="0,0,0,18">
                    <Image Source="{Binding Carro.ImagenPath}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- FORMULARIO -->
                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- MARCA -->
                    <TextBox Text="{Binding Carro.Marca}"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>

                    <!-- MODELO -->
                    <TextBox Text="{Binding Carro.Modelo}"
                             Grid.Column="1"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>

                    <!-- AÑO -->
                    <TextBox Text="{Binding Carro.Año}"
                             Grid.Row="1"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>

                    <!-- COLOR -->
                    <TextBox Text="{Binding Carro.Color}"
                             Grid.Row="1"
                             Grid.Column="1"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>

                    <!-- COSTO -->
                    <TextBox Text="{Binding Carro.Costo}"
                             Grid.Row="2"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>

                    <!-- PRECIO -->
                    <TextBox Text="{Binding Carro.PrecioVenta}"
                             Grid.Row="2"
                             Grid.Column="1"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Margin="6"
                             Height="42"
                             Foreground="White"
                             Background="#2E3440"
                             BorderThickness="0"/>
                </Grid>

                <!-- CARGAR IMAGEN (SOLO EDITAR) -->
                <Button Content="📷 Cargar Imagen"
                        Command="{Binding CargarImagenCommand}"
                        Height="40"
                        Margin="0,5,0,15">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- DESCRIPCIÓN -->
                <TextBox Text="{Binding Carro.Descripcion}"
                         IsReadOnly="{Binding EsSoloLectura}"
                         Height="90"
                         Margin="0,0,0,18"
                         Foreground="White"
                         Background="#2E3440"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <!-- BOTONES -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Cerrar"
                            Command="{Binding CerrarCommand}"
                            Width="90"
                            Margin="5"/>

                    <!-- GUARDAR SOLO EN EDITAR -->
                    <Button Content="Guardar Cambios"
                            Command="{Binding GuardarCommand}"
                            Width="170"
                            Background="#F5B301"
                            Foreground="Black"
                            FontWeight="Bold"
                            Margin="5">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>

                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
