<UserControl x:Class="ConcesionaroCarros.Views.EditarCarroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#66000000">
        <Border Width="560"
                Padding="26"
                CornerRadius="18"
                Background="#232832"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <DockPanel Margin="0,0,0,18">
                    <TextBlock Text="Editar Vehículo"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"/>
                    <Button Content="✕" 
                            Command="{Binding CerrarCommand}"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="Gray" 
                            FontSize="18"
                            HorizontalAlignment="Right"
                            Cursor="Hand"/>
                </DockPanel>

                <Border Height="120"
                        Background="#1A1E25"
                        CornerRadius="12"
                        Margin="0,0,0,18"
                        ClipToBounds="True">
                    <Image Source="{Binding Carro.ImagenPath}"
                           Stretch="UniformToFill"/>
                </Border>

                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="6">
                        <TextBlock Text="Marca" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.Marca}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="6">
                        <TextBlock Text="Modelo" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.Modelo}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="6">
                        <TextBlock Text="Año" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.Año}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="6">
                        <TextBlock Text="Color" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.Color}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="6">
                        <TextBlock Text="Costo (COP)" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.Costo}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="6">
                        <TextBlock Text="Precio Venta (COP)" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                        <TextBox Text="{Binding Carro.PrecioVenta}"
                                 IsReadOnly="{Binding EsSoloLectura}"
                                 Height="42" Padding="10,8"
                                 Foreground="White" Background="#2E3440" BorderThickness="0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="6,0,6,15">
                    <TextBlock Text="Más detalles del vehículo" Foreground="#8A92A6" Margin="0,0,0,5" FontSize="14"/>
                    <TextBox Text="{Binding Carro.Descripcion}"
                             IsReadOnly="{Binding EsSoloLectura}"
                             Height="80" Padding="10,8"
                             Foreground="White" Background="#2E3440" BorderThickness="0"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>
                </StackPanel>

                <Button Content="📷 Cargar Nueva Imagen"
                        Command="{Binding CargarImagenCommand}"
                        Height="35" Margin="6,0,6,15"
                        Background="#3a3f4b" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Cerrar"
                            Command="{Binding CerrarCommand}"
                            Height="45" Margin="6,0"
                            Background="#3a3f4b" Foreground="White" FontWeight="SemiBold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Grid.Column="1" 
                            Content="Guardar Cambios"
                            Command="{Binding GuardarCommand}"
                            Height="45" Margin="6,0"
                            Background="#F5B301" Foreground="Black" 
                            FontWeight="Bold" FontSize="15">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EsSoloLectura}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>