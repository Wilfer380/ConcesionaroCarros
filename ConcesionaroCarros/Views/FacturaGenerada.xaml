<UserControl x:Class="ConcesionaroCarros.Views.FacturaGenerada"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop"
                        Stretch="UniformToFill"
                        Opacity="0.3"/>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,5,0,-26">
            <Border Margin="50" Padding="40" Background="White" BorderBrush="#CCC"
                    BorderThickness="1" CornerRadius="5">

                <StackPanel>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="DRIVE &amp; DREAM" FontSize="28" FontWeight="Black"/>
                            <TextBlock Text="CONCESIONARIO PREMIUM" Foreground="#D4AF37"/>
                            <TextBlock Text="NIT: 900.123.456-1"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="FACTURA ELECTRÓNICA"/>
                            <TextBlock Text="{Binding IdFactura}" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="{Binding FechaFactura,StringFormat=Fecha: {0:dd/MM/yyyy}}"/>
                        </StackPanel>
                    </Grid>

                    <Separator/>

                    <Grid Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- COMPRADOR -->
                        <StackPanel Grid.Column="0">

                            <TextBlock Text="DATOS DEL COMPRADOR" FontWeight="Bold"/>

                            <TextBlock FontSize="14" FontWeight="Bold">
                                <Run Text="{Binding Cliente.Nombres}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Cliente.Apellidos}"/>
                            </TextBlock>

                            <TextBlock Text="{Binding Cliente.Cedula}"/>
                            <TextBlock Text="{Binding Cliente.Direccion}"/>
                            <TextBlock Text="{Binding Cliente.CiudadDepartamento}"/>
                            <TextBlock Text="{Binding Cliente.Telefono}"/>

                        </StackPanel>

                        <!-- VENDEDOR -->
                        <StackPanel Grid.Column="1" Margin="40,0,0,0">

                            <TextBlock Text="DATOS DEL VENDEDOR"
                                       FontWeight="Bold"/>

                            <TextBlock FontWeight="Bold">
                                <Run Text="{Binding Empleado.Nombres}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Empleado.Apellidos}"/>
                            </TextBlock>

                            <TextBlock Text="{Binding Empleado.Cargo}" />
                            <TextBlock Text="{Binding Empleado.Ciudad}" />
                            <TextBlock Text="{Binding Empleado.Departamento}"/>
                            <TextBlock Text="{Binding Empleado.Telefono}" />

                        </StackPanel>
                    </Grid>
                    <Separator/>

                    <!-- ===================== -->
                    <!-- NUEVA SECCIÓN AGREGADA -->
                    <!-- ===================== -->

                    <Border BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Background="#F7F7F7"
                            Margin="0,10,0,10">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- IMAGEN -->
                            <Border Grid.Column="0"
                                    Background="#EAEAEA"
                                    CornerRadius="6"
                                    Margin="0,0,15,0">
                                <Image Source="{Binding Carro.ImagenRuta}"
                                       Stretch="UniformToFill"/>
                            </Border>

                            <!-- DETALLES TÉCNICOS -->
                            <StackPanel Grid.Column="1">

                                <TextBlock Text="DETALLES TÉCNICOS"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Marca:" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Carro.Marca}" FontWeight="Bold"/>

                                        <TextBlock Text="Placa:" Foreground="Gray" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding Carro.Placa}" FontWeight="Bold"/>

                                        <TextBlock Text="Color:" Foreground="Gray" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding Carro.Color}" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Modelo:" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Carro.Modelo}" FontWeight="Bold"/>

                                        <TextBlock Text="Año:" Foreground="Gray" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding Carro.Año}" FontWeight="Bold"/>

                                        <TextBlock Text="Estado:" Foreground="Gray" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding Carro.Estado}" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>

                                <Border Background="#ECECEC"
                                        Margin="0,20,0,0"
                                        Padding="15"
                                        CornerRadius="6">

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right">

                                        <TextBlock Text="PRECIO BASE VEHÍCULO:"
                                                   FontWeight="Bold"
                                                   Margin="0,0,10,0"/>

                                        <TextBlock Text="{Binding Carro.PrecioVenta,StringFormat={}{0:N0} COP}"
                                                   FontSize="18"
                                                   FontWeight="Black"/>
                                    </StackPanel>
                                </Border>

                            </StackPanel>

                        </Grid>
                    </Border>

                    <Border BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="15"
                            Margin="0,10">

                        <StackPanel>

                            <TextBlock Text="CARACTERÍSTICAS"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="{Binding Carro.Descripcion}"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>

                        </StackPanel>

                    </Border>

                    <!-- TOTALES -->

                    <Border Background="#F9F9F9"
                            Margin="0,25,0,0"
                            Padding="20"
                            CornerRadius="5"
                            BorderBrush="#DDD"
                            BorderThickness="1">

                        <StackPanel HorizontalAlignment="Right"
                                    Width="280">

                            <TextBlock Text="{Binding Subtotal,StringFormat=Subtotal Bruto: {0:C0}}"/>
                            <TextBlock Text="{Binding Iva,StringFormat=IVA (19%): {0:C0}}"/>
                            <Separator Margin="0,10"/>
                            <TextBlock Text="{Binding Total,StringFormat=TOTAL: {0:C0}}"
                                       FontSize="20"
                                       FontWeight="Black"/>

                            <TextBlock Text="PESOS COLOMBIANOS (COP)"
                                       FontSize="10"
                                       Foreground="Gray"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <!-- FIRMAS -->
                    <Grid Margin="0,50,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Separator Background="Black"/>
                            <TextBlock Text="FIRMA DEL COMPRADOR"
                                       HorizontalAlignment="Center"
                                       Margin="0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Separator Background="Black"/>
                            <TextBlock Text="FIRMA DEL VENDEDOR"
                                       HorizontalAlignment="Center"
                                       Margin="0,5"/>
                        </StackPanel>
                    </Grid>

                    <Button x:Name="BtnPdf"
                            Content="GENERAR FACTURA PDF"
                            Height="45"
                            Margin="0,30,0,0"
                            FontWeight="Bold"
                            Background="#111"
                            Foreground="White"
                            Click="GenerarFacturaPdf_Click"/>


                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>