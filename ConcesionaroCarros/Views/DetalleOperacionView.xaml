<UserControl x:Class="ConcesionaroCarros.Views.DetalleOperacionView"
             xmlns:views="clr-namespace:ConcesionaroCarros.Views"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                        Stretch="UniformToFill" 
                        Opacity="0.2"/>
        </Grid.Background>

        <Border Background="#F9FFFFFF" 
                CornerRadius="15" 
                Margin="20" 
                Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="2" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ESPECIFICACIÓN DE VENTA" 
                                   FontSize="22" 
                                   FontWeight="Black" 
                                   Foreground="#1A1A1A"/>
                        <TextBlock Text="Resumen de compra y configuración técnica" 
                                   FontSize="12" 
                                   Foreground="#777"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        <TextBlock Text="FACTURA BASE PROMEDIA" 
                                   FontWeight="Bold" 
                                   Foreground="#D4AF37"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Text="{Binding FechaActual, StringFormat=FECHA: {0:yyyy-MM-dd}}"
                                   FontSize="11" 
                                   Foreground="#555"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#EEE" 
                        BorderThickness="1" 
                        CornerRadius="10" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                CornerRadius="8" 
                                Height="180"
                                BorderBrush="#DDD" 
                                BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Vehiculo.ImagenPath}" 
                                            Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                    Margin="20,0,0,0">
                            <TextBlock Text="DETALLES DEL VEHÍCULO" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10" 
                                       Foreground="#333"/>

                            <UniformGrid Columns="2">
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Marca:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.Marca}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Modelo:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.Modelo}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Placa:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.Placa}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Año:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.Año}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Color" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.Color}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="Estado Antiguedad:" FontSize="11" Foreground="#888"/>
                                    <TextBlock Text="{Binding Vehiculo.EstadoAntiguedad}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </UniformGrid>

                            <Border Background="#F1F1F1" 
                                    Margin="0,15,0,0" 
                                    Padding="10" 
                                    CornerRadius="5">
                                <DockPanel>
                                    <TextBlock Text="PRECIO BASE VEHÍCULO:" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center"/>
                                    
                                    <TextBlock Text="{Binding PrecioBase, StringFormat={}{0:N0} COP}" 
                                              FontSize="18"
                                               FontWeight="Black"
                                               Foreground="#007ACC"
                                               HorizontalAlignment="Right"/>
                                </DockPanel>
                            </Border>

                            <Button Content="Quitar del carrito"
                                    Height="32"
                                    Margin="0,10,0,0"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Command="{Binding DataContext.QuitarDelCarritoCommand,
                                              RelativeSource={RelativeSource AncestorType=views:PuntoVentaView}}"
                                    CommandParameter="{Binding Vehiculo}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="White" 
                            BorderBrush="#EEE" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Padding="15" 
                            Margin="0,0,10,0">

                        <StackPanel>
                            <TextBlock Text="MÁS DETALLES DEL VEHÍCULO" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding Vehiculo.Descripcion}"
                                       TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="#444"/>

                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#EEE" 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Padding="15" 
                            Margin="10,0,0,0">

                        <StackPanel>
                            <TextBlock Text="FORMA DE PAGO" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <RadioButton Content="Pago de Contado" 
                                         IsChecked="True" 
                                         Margin="0,5"/>

                            <RadioButton Content="Crédito Bancario" 
                                         Margin="0,5"/>


                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
 