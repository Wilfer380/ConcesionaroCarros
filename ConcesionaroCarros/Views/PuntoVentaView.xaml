<UserControl x:Class="ConcesionaroCarros.Views.PuntoVentaView"
             xmlns:views="clr-namespace:ConcesionaroCarros.Views"
             xmlns:vm="clr-namespace:ConcesionaroCarros.ViewModels"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type vm:DetalleOperacionViewModel}">
            <views:DetalleOperacionView/>
        </DataTemplate>

        <Style x:Key="StepIconBorder" TargetType="Border">
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="StepText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="#F8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Padding="50,40,50,20">
            <StackPanel>
                <TextBlock Text="Punto de Venta"
                           FontSize="34"
                           FontWeight="Black"
                           Foreground="#1E293B"/>
                <TextBlock Text="Gestión de flujo de caja y facturación electrónica"
                           FontSize="15"
                           Foreground="#64748B"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>


        <Grid Grid.Row="1" Margin="50,10,50,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Margin="0,0,0,35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.ColumnSpan="4"
                           Height="2"
                           Fill="#E2E8F0"
                           VerticalAlignment="Top"
                           Margin="100,27,100,0"/>

                <StackPanel Grid.Column="0">
                    <Border Style="{StaticResource StepIconBorder}" BorderBrush="#F59E0B">
                        <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#F59E0B"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Detalle Operación"
                               Style="{StaticResource StepText}"
                               Foreground="#F59E0B"/>
                </StackPanel>


                <StackPanel Grid.Column="1">
                    <Border Style="{StaticResource StepIconBorder}" BorderBrush="#CBD5E1">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#CBD5E1"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Datos del Cliente"
                               Style="{StaticResource StepText}"
                               Foreground="#CBD5E1"/>
                </StackPanel>


                <StackPanel Grid.Column="2">
                    <Border Style="{StaticResource StepIconBorder}" BorderBrush="#CBD5E1">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#CBD5E1"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Confirmar Venta"
                               Style="{StaticResource StepText}"
                               Foreground="#CBD5E1"/>
                </StackPanel>


                <StackPanel Grid.Column="3">
                    <Border Style="{StaticResource StepIconBorder}" BorderBrush="#CBD5E1">
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#CBD5E1"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Factura Generada"
                               Style="{StaticResource StepText}"
                               Foreground="#CBD5E1"/>
                </StackPanel>
            </Grid>


            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="24"
                    Padding="0">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="30"
                          ShadowDepth="5"
                          Opacity="0.05"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="10">

                    <ContentControl Content="{Binding PasoActualView}" />

                </ScrollViewer>

            </Border>

        </Grid>
    </Grid>
</UserControl>
 