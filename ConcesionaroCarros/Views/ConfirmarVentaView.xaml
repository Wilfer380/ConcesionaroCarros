<UserControl x:Class="ConcesionaroCarros.Views.ConfirmarVentaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC">
    <UserControl.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,25">
            <Grid>
                <StackPanel>
                    <TextBlock Text="AUDITORÍA FINAL DE VENTA" 
                               FontSize="26" 
                               FontWeight="Black" 
                               Foreground="#1E293B"/>
                    <TextBlock Text="Verifique la flota y seleccione el canal de recaudo para emitir factura." 
                               Foreground="#94A3B8" 
                               FontSize="13"/>
                </StackPanel>
                <Border HorizontalAlignment="Right" 
                        Background="#ECFDF5" 
                        Padding="12,6" CornerRadius="8" 
                        BorderBrush="#10B981" 
                        BorderThickness="1">
                    <TextBlock Text="CARRITO VALIDADO" 
                               Foreground="#059669" 
                               FontSize="11" 
                               FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="12" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1" 
                    Margin="0,0,15,0" 
                    Padding="20">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="VEHÍCULOS EN LA ORDEN" 
                               Style="{StaticResource SectionTitle}"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CarritoVehiculos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F1F5F9" 
                                            CornerRadius="10" 
                                            Padding="15" 
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="&#xEB4D;" 
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="24" 
                                                       Foreground="#3B82F6" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,15,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <Grid>
                                                    <TextBlock Text="{Binding MarcaModelo}" 
                                                               FontWeight="Bold"
                                                               Foreground="#1E293B"/>
                                                    <TextBlock Text="{Binding Precio, StringFormat={}{0:C0}}" 
                                                               HorizontalAlignment="Right" 
                                                               FontWeight="Bold" 
                                                               Foreground="#1E293B"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Vin, StringFormat='VIN: {0}'}" 
                                                           FontSize="11" 
                                                           Foreground="#64748B" 
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                <Border Background="White" 
                        CornerRadius="12" 
                        BorderBrush="#E2E8F0" 
                        BorderThickness="1"
                        Padding="20" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="MÉTODO DE PAGO / ENTIDAD" 
                                   Style="{StaticResource SectionTitle}"/>
                        <ComboBox ItemsSource="{Binding MetodosPago}" 
                                  SelectedItem="{Binding MetodoSeleccionado}"
                                  Height="45" 
                                  VerticalContentAlignment="Center" 
                                  Padding="10,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C7;" 
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Margin="0,0,10,0" 
                                                   Foreground="#64748B"/>
                                        <TextBlock Text="{Binding NombreBanco}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="ID Transacción / Referencia" 
                                   FontSize="11" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5" 
                                   FontWeight="Bold"/>
                        <TextBox Height="35" 
                                 VerticalContentAlignment="Center" 
                                 BorderBrush="#E2E8F0" 
                                 Padding="5,0"/>
                    </StackPanel>
                </Border>

                <Border Background="White" 
                        CornerRadius="12" 
                        BorderBrush="#E2E8F0" 
                        BorderThickness="1" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="SERVICIOS INCLUIDOS" Style="{StaticResource SectionTitle}"/>
                        <CheckBox Content="Garantía de Fábrica (5 años)" 
                                  IsChecked="True" 
                                  IsEnabled="False" 
                                  Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Asistencia en Carretera 24/7" 
                                  IsChecked="True" 
                                  Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Kit de Carretera Completo" 
                                  IsChecked="True" 
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="12" 
                    BorderBrush="#3B82F6" 
                    BorderThickness="2" 
                    Padding="25">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="RESUMEN FINANCIERO" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="#3B82F6" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,25"/>

                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Subtotal Flota" Foreground="#64748B"/>
                            <TextBlock Text="{Binding Subtotal, StringFormat={}{0:C0}}" 
                                       HorizontalAlignment="Right" 
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Impuestos (IVA)" 
                                       Foreground="#64748B"/>
                            <TextBlock Text="{Binding Iva, StringFormat={}{0:C0}}" 
                                       HorizontalAlignment="Right" 
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Border Height="1" 
                                Background="#F1F5F9" 
                                Margin="0,15"/>

                        <TextBlock Text="TOTAL A PAGAR" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="#94A3B8" 
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="{Binding TotalFinal, StringFormat={}{0:C0}}" 
                                   FontSize="30" FontWeight="Black" 
                                   Foreground="#1E293B" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>

                        <Border Background="#F1F5F9" 
                                CornerRadius="8" 
                                Padding="10" 
                                Margin="0,25,0,0">
                            <TextBlock Text="LISTO PARA EMISIÓN" 
                                       Foreground="#64748B" 
                                       FontSize="10" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="La factura será enviada al correo registrado del cliente automáticamente." 
                               VerticalAlignment="Bottom" 
                               TextWrapping="Wrap" 
                               FontSize="10" 
                               Foreground="#94A3B8" 
                               TextAlignment="Center" 
                               FontStyle="Italic"/>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Button Content="← VOLVER A DATOS CLIENTE" 
                    HorizontalAlignment="Left" 
                    Width="220" 
                    Height="50"
                    Background="Transparent" 
                    BorderBrush="#CBD5E1" 
                    Foreground="#64748B" 
                    FontWeight="Bold"
                    Command="{Binding VolverADatosClienteCommand}"/>

            <Button Content="CONFIRMAR Y EMITIR FACTURA →" 
            HorizontalAlignment="Right" 
                    Width="360" 
                    Height="60"
                    Background="#2563EB" 
                    Foreground="White"
                    FontWeight="Black" 
                    FontSize="15"
                    Command="{Binding ConfirmarVentaCommand}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      Opacity="0.2" 
                                      ShadowDepth="4" 
                                      
                                      
                                      
                                      
                                      
                                      Color="#2563EB"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Grid>
</UserControl>