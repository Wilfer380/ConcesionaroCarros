<UserControl x:Class="ConcesionaroCarros.Views.ConfirmarVentaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F1F5F9">

    <UserControl.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Confirmar Venta" FontSize="28" FontWeight="Black" Foreground="#1E293B"/>
            <TextBlock Text="Resumen ejecutivo y analítica de facturación en tiempo real."
                       Foreground="#64748B" FontSize="13"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <Border Background="White" CornerRadius="20" Padding="25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,25,0">
                        <TextBlock Text="Resumen de la Orden" Style="{StaticResource SectionTitle}"/>

                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="VEHÍCULOS" FontSize="11" FontWeight="Bold" Foreground="#94A3B8"/>
                            <TextBlock Grid.Column="1" Text="CARACTERÍSTICAS " FontSize="11" FontWeight="Bold" Foreground="#94A3B8"/>
                        </Grid>
                        <Separator Background="#F1F5F9" Margin="0,0,0,10"/>

                        <ScrollViewer MaxHeight="350" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CarritoVehiculos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="80" Height="50" CornerRadius="8" Background="#F8FAFC" Margin="0,0,15,0">
                                                <Image Source="{Binding ImagenRuta}" Stretch="UniformToFill"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding MarcaModelo}" FontWeight="Bold" Foreground="#1E293B" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Vin}" FontSize="10" Foreground="#94A3B8"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="4" Height="4" Fill="#64748B" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Motor}" FontSize="12" Foreground="#475569"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Ellipse Width="4" Height="4" Fill="#64748B" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding CaracteristicaEspecial}" FontSize="12" Foreground="#475569"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,4,0,0">
                                                    <Ellipse Width="4"
                                                             Height="4"
                                                             Fill="#64748B"
                                                             Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding CaracteristicaEspecial}"
                                                               FontSize="12"
                                                               Foreground="#475569"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock Text="Información de Pago" Style="{StaticResource SectionTitle}" Margin="0,25,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="ID Transacción / Referencia" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <TextBox Height="42" VerticalContentAlignment="Center" Padding="15,0" BorderBrush="#E2E8F0" Background="#F8FAFC" Foreground="#1E293B" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="MÉTODO DE PAGO" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <ComboBox Height="42" VerticalContentAlignment="Center" BorderBrush="#E2E8F0" Background="#F8FAFC">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem IsSelected="True">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="💳" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="•••• 4242" VerticalAlignment="Center" Foreground="#1E293B"/>
                                            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                                <Border Background="#EB001B" Width="12" Height="8" CornerRadius="2" Margin="2,0"/>
                                                <Border Background="#F79E1B" Width="12" Height="8" CornerRadius="2" Margin="2,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="TIPO DE OPERACIÓN" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <ComboBox Height="42" Background="#F8FAFC" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="ESTADO DEL PAGO" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <ComboBox Height="42" Background="#F8FAFC" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="CANAL DE RECAUDO" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <ComboBox Height="42" Background="#F8FAFC" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="ASESOR RESPONSABLE" FontSize="11" FontWeight="SemiBold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                                <TextBox Height="42" IsReadOnly="True" Background="#F1F5F9" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Background="#F8FAFC"
                            CornerRadius="15"
                            Padding="20"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="RESUMEN FINANCIERO"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Foreground="#7C4DFF"/>

                            <Grid Height="160" Margin="0,15">

                                <!-- FONDO GRIS -->
                                <Ellipse Stroke="#E2E8F0"
                                         StrokeThickness="20"/>

                                <!-- SUBTOTAL (VERDE) -->
                                <Ellipse Stroke="#10B981"
                                         StrokeThickness="20"
                                         StrokeDashArray="3,1"
                                         Margin="2"/>

                                <!-- IVA (AZUL) -->
                                <Ellipse Stroke="#3B82F6"
                                         StrokeThickness="20"
                                         StrokeDashArray="2,6"
                                         Margin="2"/>

                                <!-- SEPARACIÓN TOTAL (BLANCO) -->
                                <Ellipse Stroke="White"
                                         StrokeThickness="12"
                                         Margin="12"/>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="TOTAL A PAGAR"
                                               HorizontalAlignment="Center"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="#94A3B8"/>
                                    <TextBlock Text="{Binding TotalFinal, StringFormat={}{0:C0}}"
                                               HorizontalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Black"/>
                                </StackPanel>
                            </Grid>

                            <DockPanel Margin="0,5">
                                <TextBlock Text="Subtotal Flota" Foreground="#64748B"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat={}{0:C0}}"
                                           HorizontalAlignment="Right"
                                           FontWeight="Bold"/>
                            </DockPanel>

                            <DockPanel Margin="0,5">
                                <TextBlock Text="Impuestos (IVA)" Foreground="#64748B"/>
                                <TextBlock Text="{Binding Iva, StringFormat={}{0:C0}}"
                                           HorizontalAlignment="Right"
                                           FontWeight="Bold"/>
                            </DockPanel>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Button Content="← VOLVER A DATOS DEL CLIENTE" Background="Transparent" BorderThickness="0" Foreground="#94A3B8" FontWeight="Bold" HorizontalAlignment="Left"
                    Command="{Binding VolverADatosClienteCommand}"/>
            <Button Content="CONFIRMAR Y EMITIR FACTURA" Background="#10B981" Foreground="White" FontWeight="Bold" Padding="30,12" HorizontalAlignment="Right"
                    Command="{Binding ConfirmarVentaCommand}"/>
        </Grid>
    </Grid>
</UserControl>