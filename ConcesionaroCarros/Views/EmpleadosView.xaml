<UserControl x:Class="ConcesionaroCarros.Views.EmpleadosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                        Stretch="UniformToFill" Opacity="0.3"/>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="EQUIPO DE VENTAS" 
                           FontSize="28" FontWeight="ExtraBold" Foreground="#1E1E1E"/>
                <TextBlock Text="Seleccione el asesor que atenderá esta operación" 
                           FontSize="14" Foreground="#555"/>
            </StackPanel>

            <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.Items>
                    <ListBoxItem Padding="0" Margin="10">
                        <Border Width="220" Height="260" Background="#E6FFFFFF" CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Width="80" Height="80" Background="#222" CornerRadius="40" Margin="0,0,0,15">
                                    <TextBlock Text="JP" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="Juan Pérez" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock Text="Asesor Comercial" Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="Ventas: 12 este mes" FontSize="11" Foreground="#777" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ListBoxItem>

                    <ListBoxItem Padding="0" Margin="10">
                        <Border Width="220" Height="260" Background="#E6FFFFFF" CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Width="80" Height="80" Background="#555" CornerRadius="40" Margin="0,0,0,15">
                                    <TextBlock Text="M" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="María Rodríguez" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock Text="Asesor Senior" Foreground="#D4AF37" HorizontalAlignment="Center" Margin="0,5"/>
                                <TextBlock Text="Ventas: 18 este mes" FontSize="11" Foreground="#777" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ListBoxItem>
                </ListBox.Items>
            </ListBox>

            <Button Grid.Row="2" Content="CONFIRMAR ASESOR" 
                    Height="50" Width="300" 
                    Background="#1E1E1E" Foreground="White" 
                    FontWeight="Bold" FontSize="14" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</UserControl>