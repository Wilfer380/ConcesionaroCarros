<Window x:Class="ConcesionaroCarros.Views.ClientesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directorio de Clientes" Height="700" Width="1080"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="GoldButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D4AF37"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C59F2B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                        Stretch="UniformToFill" Opacity="0.08"/>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,30">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Cartera de Clientes" FontSize="32" FontWeight="ExtraBold" Foreground="#1A1A1A"/>
                    <TextBlock Text="Gestión de relaciones comerciales y prospectos" FontSize="16" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>

                <Button DockPanel.Dock="Right" 
                        Content="+ Nuevo Cliente" 
                        Style="{StaticResource GoldButtonStyle}"/>
            </DockPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,25" BorderBrush="#EEE" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <TextBlock Text="🔍 Buscar por nombre, cédula o teléfono..." Foreground="#AAA" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox Background="Transparent" BorderThickness="0" FontSize="14" VerticalContentAlignment="Center" Padding="5"/>
                    </Grid>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ComboBox Width="150" Margin="10,0" Padding="10,5" SelectedIndex="0">
                            <ComboBoxItem Content="Todos los clientes"/>
                            <ComboBoxItem Content="Clientes VIP"/>
                            <ComboBoxItem Content="Prospectos Nuevos"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <ListView Grid.Row="2" BorderThickness="0" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="480"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.Items>

                    <ListViewItem Margin="0,0,15,15" Focusable="False">
                        <Border Background="White" CornerRadius="16" Width="460" Height="210" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.08"/>
                            </Border.Effect>
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Width="60" Height="60" CornerRadius="30" Background="#1A1A1A" Margin="0,0,15,0" VerticalAlignment="Top">
                                    <TextBlock Text="CR" Foreground="#D4AF37" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Carlos Rodríguez" FontSize="18" FontWeight="Bold" Foreground="#222"/>
                                        <Border Background="#E8F5E9" CornerRadius="4" Margin="10,0,0,0" Padding="8,2" VerticalAlignment="Center">
                                            <TextBlock Text="CLIENTE VIP" FontSize="10" FontWeight="Bold" Foreground="#2E7D32"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="ID: 1020450122" FontSize="12" Foreground="#888" Margin="0,2,0,0"/>
                                </StackPanel>

                                <Button Grid.Row="0" Grid.Column="2" Content="⋮" FontSize="20" Background="Transparent" BorderThickness="0" Foreground="#AAA" Cursor="Hand" VerticalAlignment="Top"/>

                                <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="📧" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="carlos.rod@gmail.com" Foreground="#555"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="📞" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="+57 300 123 4567" Foreground="#555"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🚘" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="Interés: Audi Q5 / BMW X3" Foreground="#1A1A1A" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button Content="Ver Historial" Height="30" Padding="15,0" Background="Transparent" BorderBrush="#CCC" BorderThickness="1" Foreground="#555" Margin="0,0,10,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="15"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="Contactar" Height="30" Padding="15,0" Background="#1A1A1A" BorderThickness="0" Foreground="White">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="15"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <ListViewItem Margin="0,0,15,15" Focusable="False">
                        <Border Background="White" CornerRadius="16" Width="460" Height="210" BorderBrush="#E0E0E0" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.08"/>
                            </Border.Effect>
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Width="60" Height="60" CornerRadius="30" Background="#F5F5F5" Margin="0,0,15,0" VerticalAlignment="Top">
                                    <TextBlock Text="ML" Foreground="#555" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Maria Fernanda Lopez" FontSize="18" FontWeight="Bold" Foreground="#222"/>
                                        <Border Background="#FFF8E1" CornerRadius="4" Margin="10,0,0,0" Padding="8,2" VerticalAlignment="Center">
                                            <TextBlock Text="NUEVO PROSPECTO" FontSize="10" FontWeight="Bold" Foreground="#D4AF37"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="ID: 43221998" FontSize="12" Foreground="#888" Margin="0,2,0,0"/>
                                </StackPanel>

                                <Button Grid.Row="0" Grid.Column="2" Content="⋮" FontSize="20" Background="Transparent" BorderThickness="0" Foreground="#AAA" Cursor="Hand" VerticalAlignment="Top"/>

                                <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="📧" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="mafe.lopez@outlook.com" Foreground="#555"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="📞" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="+57 311 999 8888" Foreground="#555"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🚘" Width="20" Foreground="#D4AF37"/>
                                        <TextBlock Text="Interés: Sedán económico" Foreground="#1A1A1A" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button Content="Ver Historial" Height="30" Padding="15,0" Background="Transparent" BorderBrush="#CCC" BorderThickness="1" Foreground="#555" Margin="0,0,10,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="15"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="Contactar" Height="30" Padding="15,0" Background="#1A1A1A" BorderThickness="0" Foreground="White">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="15"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                </ListView.Items>
            </ListView>
        </Grid>
    </Grid>
</Window>