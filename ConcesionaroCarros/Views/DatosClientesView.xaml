<UserControl x:Class="ConcesionaroCarros.Views.DatosClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="5">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="placeholder" 
                                       Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       IsHitTestVisible="False" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center" 
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Border Background="White" CornerRadius="20" Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.1" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Datos del Cliente"
                           FontSize="26"
                           FontWeight="Black"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Información requerida para la venta"
                           Foreground="#64748B"
                           Margin="0,0,0,25"/>

                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         Height="38" Margin="0,6"
                         Style="{StaticResource PlaceholderTextBox}" Tag="Nombre completo"/>

                <TextBox Text="{Binding Documento, UpdateSourceTrigger=PropertyChanged}"
                         Height="38" Margin="0,6"
                         Style="{StaticResource PlaceholderTextBox}" Tag="Documento"/>

                <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                         Height="38" Margin="0,6"
                         Style="{StaticResource PlaceholderTextBox}" Tag="Teléfono"/>

                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Height="38" Margin="0,6"
                         Style="{StaticResource PlaceholderTextBox}" Tag="Correo electrónico"/>

                <Button Content="Continuar"
                        Height="50"
                        Margin="0,25,0,0"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#2563EB"
                        Foreground="White"
                        Command="{Binding ContinuarCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>