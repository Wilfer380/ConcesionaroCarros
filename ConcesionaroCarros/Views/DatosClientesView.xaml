<UserControl x:Class="ConcesionaroCarros.Views.DatosClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F1F5F9">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="0" Opacity="0.05"/>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="FieldValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E293B" CornerRadius="16,16,0,0" Padding="30,20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Border Width="60" Height="60" CornerRadius="30" Background="#334155" BorderBrush="#475569" BorderThickness="2">
                        <TextBlock Text="👤" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ClienteSeleccionado.NombreCompleto, FallbackValue='ALEXANDER PIERCE RIVERA'}" 
                                   FontSize="22" FontWeight="Black" Foreground="White"/>
                        <TextBlock Text="DOCUMENTO OFICIAL DE IDENTIDAD" FontSize="10" Foreground="#94A3B8" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="ID DE CLIENTE" FontSize="10" Foreground="#94A3B8" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding ClienteSeleccionado.Cedula, FallbackValue='1.082.990.445'}" 
                               FontSize="18" FontWeight="Bold" Foreground="#F5B301" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="0,0,16,16" Padding="30" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="DATOS DE LOCALIZACIÓN" FontSize="12" FontWeight="Bold" Foreground="#0284C7" Margin="0,0,0,20"/>

                    <UniformGrid Columns="1">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="TELÉFONO MÓVIL" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="{Binding ClienteSeleccionado.Telefono, FallbackValue='+57 310 455 8899'}" Style="{StaticResource FieldValue}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="CORREO ELECTRÓNICO" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="{Binding ClienteSeleccionado.Email, FallbackValue='alex.pierce@corporativo.com'}" Style="{StaticResource FieldValue}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="DIRECCIÓN DE RESIDENCIA" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="{Binding ClienteSeleccionado.Direccion, FallbackValue='Transversal 45 # 12 - 80 Edificio Platino'}" Style="{StaticResource FieldValue}" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="CIUDAD / DEPARTAMENTO" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="{Binding ClienteSeleccionado.Ciudad, FallbackValue='Bucaramanga, Santander'}" Style="{StaticResource FieldValue}"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>

                <Rectangle Grid.Column="1" Width="1" Fill="#F1F5F9" Margin="0,10"/>

                <StackPanel Grid.Column="2" Margin="20,0,0,0">
                    <TextBlock Text="INFORMACIÓN COMPLEMENTARIA" FontSize="12" FontWeight="Bold" Foreground="#0284C7" Margin="0,0,0,20"/>

                    <UniformGrid Columns="1">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ACTIVIDAD ECONÓMICA" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="Empleado Sector Privado / Independiente" Style="{StaticResource FieldValue}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="LICENCIA DE CONDUCCIÓN" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="Categoría B1 - Vigente hasta 2028" Style="{StaticResource FieldValue}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="REFERENCIA PERSONAL" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Text="Claudia Rivera (Familiar) - 300 123 4567" Style="{StaticResource FieldValue}"/>
                        </StackPanel>

                        <Border Background="#F8FAFC" Padding="15" CornerRadius="10" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="OBSERVACIONES DE SEGURIDAD" Style="{StaticResource FieldLabel}"/>
                                <TextBlock Text="Sin antecedentes de tránsito. Documentación del cliente validada mediante central de riesgos." 
                                           FontSize="13" Foreground="#64748B" TextWrapping="Wrap" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Button Content="← VOLVER ATRÁS" 
                    HorizontalAlignment="Left" Width="200" Height="50"
                    Background="Transparent" Foreground="#64748B" 
                    FontWeight="Bold" BorderBrush="#CBD5E1" BorderThickness="1"
                    Command="{Binding VolverCommand}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="CONFIRMAR DATOS Y CONTINUAR →" 
                    HorizontalAlignment="Right" Width="320" Height="55"
                    Background="#1E293B" Foreground="White" 
                    FontWeight="Bold" FontSize="14"
                    Command="{Binding IrAPagoCommand}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</UserControl>