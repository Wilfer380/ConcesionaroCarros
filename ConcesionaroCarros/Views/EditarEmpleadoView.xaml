<UserControl x:Class="ConcesionaroCarros.Views.EditarEmpleadoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ConcesionaroCarros.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900">

    <UserControl.Resources>
        <local:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,10,0,4"/>
        </Style>

        <Style x:Key="EditTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                Background="#FCFCFC"
                                BorderBrush="#DDD"
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#95000000">
        <Border Background="White"
                Width="650"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="30"
                Padding="40">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,30">
                    <Grid Width="100" Height="100">
                        <Ellipse Stroke="#D4AF37" StrokeThickness="3">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="https://i.pravatar.cc/150?u=12"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <TextBlock Text="Editar Perfil de Empleado"
                               FontSize="22"
                               FontWeight="ExtraBold"
                               Margin="0,15,0,0"/>

                    <TextBlock Text="{Binding Empleado.Id, StringFormat=ID Empleado: EMP-{0}}"
                               FontSize="12"
                               Foreground="#999"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Nombre" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Nombres, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Cédula / Documento" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Cedula, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Correo Electrónico" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Correo, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Cargo" Style="{StaticResource FieldLabel}"/>
                        <ComboBox Height="38"
                                  SelectedValue="{Binding Empleado.Cargo}"
                                  SelectedValuePath="Content">
                            <ComboBoxItem Content="Asesor Junior"/>
                            <ComboBoxItem Content="Asesor Senior"/>
                            <ComboBoxItem Content="Gerente de Ventas"/>
                        </ComboBox>

                        <TextBlock Text="Estado del Asesor" Style="{StaticResource FieldLabel}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton Content="Activo"
                                         GroupName="Estado"
                                         IsChecked="{Binding Empleado.Activo, Mode=TwoWay}"
                                         Foreground="#2E7D32"
                                         FontWeight="Bold"
                                         Margin="0,0,20,0"/>

                            <RadioButton Content="Inactivo"
                                         GroupName="Estado"
                                         IsChecked="{Binding Empleado.Activo, Mode=TwoWay,
                                                     Converter={StaticResource BooleanNegationConverter}}"
                                         Foreground="#C62828"
                                         FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Apellido" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Apellidos, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Departamento" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Departamento, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Ciudad" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Ciudad, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Teléfono" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding Empleado.Telefono, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditTextBox}"/>

                        <TextBlock Text="Meta de Ventas Mensual (%)" Style="{StaticResource FieldLabel}"/>
                        <Slider Minimum="0"
                                Maximum="100"
                                Value="{Binding Empleado.MetaVentas}"
                                Margin="0,10"/>

                        <TextBlock Text="{Binding Empleado.MetaVentas, StringFormat={}{0}%}"
                                   FontSize="11"
                                   Foreground="#D4AF37"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,40,0,0">
                    <Button Content="Cancelar"
                            Command="{Binding CancelarCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#999"
                            HorizontalAlignment="Left"/>

                    <Button Content="Guardar Cambios"
                            Command="{Binding GuardarCommand}"
                            Width="200"
                            Height="45"
                            Background="#D4AF37"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Right">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>