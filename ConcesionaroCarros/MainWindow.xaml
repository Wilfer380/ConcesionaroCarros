<Window x:Class="ConcesionaroCarros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DRIVE &amp; DREAM | Elite Automotive Management" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#D4AF37"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#111111">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="25,40,25,50">
                    <TextBlock Text="DRIVE &amp; DREAM" Foreground="White" FontSize="22" FontWeight="Black"/>
                    <TextBlock Text="SISTEMA DE GESTIÓN" Foreground="#D4AF37" FontSize="10" FontWeight="Bold" Margin="2,2,0,0"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top">
                    <Button Content="🚗 Inventario de Carros" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="👥 Directorio de Clientes" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="👔 Gestión de Empleados" Style="{StaticResource MenuButtonStyle}"/>
                    <Separator Background="#222" Margin="20,15"/>
                    <Button Content="💰 Punto de Venta" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="📄 Registro de Facturas" Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,0,0,20">
                    <TextBlock Text="Estado: Conectado" Foreground="#44BB44" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBlock Text="v2.0.1 - Premium Edition" Foreground="#444" FontSize="9" HorizontalAlignment="Center" Margin="0,5"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.Background>
                <ImageBrush ImageSource="https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?q=80&amp;w=1983&amp;auto=format&amp;fit=crop" 
                            Stretch="UniformToFill" Opacity="0.12"/>
            </Grid.Background>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="45">
                    <TextBlock Text="Dashboard Operativo" FontSize="34" FontWeight="Bold" Foreground="#1A1A1A"/>
                    <TextBlock Text="Gestión de activos de alto rendimiento y atención al cliente premium." FontSize="15" Foreground="#666" Margin="0,5,0,40"/>

                    <UniformGrid Columns="3" Margin="0,0,0,40">
                        <Border Background="White" Margin="8" CornerRadius="15" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="VALOR EN STOCK" Foreground="#888" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="$3.850.000.000" FontSize="22" FontWeight="Black" Foreground="#1A1A1A" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" Margin="8" CornerRadius="15" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="UNIDADES VENDIDAS" Foreground="#888" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="14 Vehículos" FontSize="22" FontWeight="Black" Foreground="#44BB44" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="White" Margin="8" CornerRadius="15" Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="PROMEDIO DE VENTA" Foreground="#888" FontSize="11" FontWeight="Bold"/>
                                <TextBlock Text="$275.000.000" FontSize="22" FontWeight="Black" Foreground="#D4AF37" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Border Background="#FDFDFD" CornerRadius="20" Padding="35" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="DESCRIPCIÓN DE OPERACIONES" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,25"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🛒" FontSize="20" VerticalAlignment="Top"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Módulo de Inventario" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Control total sobre el catálogo de vehículos. Permite la edición de especificaciones técnicas, motorización y disponibilidad en sala." Foreground="#666" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="💳" FontSize="20" VerticalAlignment="Top"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Pasarela de Ventas" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Configuración dinámica de precios finales incluyendo blindajes, planes de financiación y accesorios exclusivos de la marca." Foreground="#666" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="📑" FontSize="20" VerticalAlignment="Top"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Inteligencia de Datos" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Generación de reportes de cumplimiento de metas para empleados y trazabilidad de facturación legal vigente." Foreground="#666" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <ContentControl x:Name="MainContentFrame" Panel.ZIndex="10"/>
        </Grid>
    </Grid>
</Window>